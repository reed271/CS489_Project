</head>


<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Left Navigation Column --> 
            <div class="col-2" style="position:relative">
                
                <img class="logo" src="images/reel_logo.png" alt="">
                    <div class="table-bordered">
                        <div class="current-entry">
                            <a href="/users/view_profile" class="table-entry">
                            Current User: <%= user.username %>
                        </a>
                        </div>
                        <hr>
                        <div class="current-entry">
                            <a href="/storefront" class="table-entry">
                            Homepage
                        </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="http://127.0.0.1:5500/app/View/storefront.html" class="table-entry">
                            Browse Items
                            </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="view_profile.html" class="table-entry">
                                Profile
                            </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="/" class="table-entry">
                                Login
                                </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="/storefront/sell_item" class="table-entry">
                                Upload New Items
                                </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="http://127.0.0.1:5500/app/View/checkout.html" class="table-entry">
                                Checkout
                                </a>
                        </div>
                        <hr>
                        <div class="table-entry">
                            <a href="" class="table-entry">
                                Contact Us
                                </a>
                        </div>
                        <hr>
                        
                   
                    </div>
                
            </div>
            <!-- Left Navigation Column --> 


<div class="col-10">
    <h1>
        Welcome to the Storefront!
        <form action="/search" method="get" class="search-form">
            <input type="text" name="q" placeholder="Search..." class="search-input">
            <button type="submit" class="search-button">Search</button>
          </form>
        <hr>
    </h1>
    <br>
    <h2>
        Viewing Recently Posted Items
        
    </h2>
<div class="postlist">

    <% for (item of products) { %>

    <!-- Item 1-->
    <div class="post-box">
        <table class = "posttable" style = "width:100%" valign="top">
            <tr> 
                <!-- Title of the product -->
                <td colspan="3"><div class="posttitle"> <%= item.name %> </div>
                </td>
            </tr>
            <tr>
                <!--
                <td width="10%" >
                    Image of the product 
                    <img src="images/whip.jpg" class="product-pic">
                </td> 
                -->
                        

                <td width="80%" >
                    <div>
                    <!-- Description of the product -->
                    <div class="postmessage"> <%= item.desc %> </div>
                    
                </div>
                <div class="posttimestamp"> 
                    <!-- (milestone3) TODO: format the timestamp; display as local date/time-->
                    <!-- Time the product was posted -->
                    Posted at: February 21st, 2023
                </div> 
                </td> 

                <td width = "15%"> 
                    <div class="likecount">
                                        
                        <br>

                        
                            
                            <img src="images/whip.jpg" class="product-pic">
                        


                        

                        Price: $<%= item.price %>
                        
                    </div>
                    <br> 
                    <!-- Here, check is current_user made post, and if so, allow them to delete from storefront.
                    {% if current_user == post.writer %}
                        <form action="{{ url_for('routes.delete', post_id = post.id) }}" method="post">
                            <input type="submit" value="Delete" class="button">
                        </form>
                    {% endif %}
                    -->


                </td>
            </tr>
            
            <tr> 
                <td colspan="3" style = "text-align:center" valign="bottom">  
                    <br>

                    <!-- Possible tag / genre information? 
                    {% for tag in post.get_tags().all() %}
                        <span class="tagitem">{{ tag }}</span>
                    {% endfor %}
                    -->

                </td>
            </tr>

            <tr>
                <td colspan="3" style = "text-align:center" valign="bottom">  
                    <br>
                    <span class="formbody">Posted by: <%= item.owner %></span>
                    <p class = "design" >Shopping-cart icon design 2 with link : <a href="#">  
                        <span class="glyphicon glyphicon-shopping-cart">  
                      </span>  
                      </a>  
                    </p>
              

                </td>
                </tr>
            </tr>
        </table>
    </div>

    <% } %> 

    <!-- hard coded examples 
    

</div>
</div>


</body>